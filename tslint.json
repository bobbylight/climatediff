{
  "rules": {
    "adjacent-overload-signatures": true,
    "align": [
      true,
      "statements"
    ],
    "arrow-parens": true,
    "ban": false,
    "ban-comma-operator": true,
    "class-name": false,
    "comment-format": [ false ],
    "curly": true,
    "deprecation": true,
    "forin": false,
    "indent": [
      true,
      "spaces"
    ],
    "jsdoc-format": [ true, "check-multiline-start" ],
    "label-position": true,
    //"linebreak-style": [ true, "LF" ],
    "match-default-export-name": true,
    "max-file-line-count": [ true, 1000 ],
    "max-line-length": [
      true,
      140
    ],
    "member-access": false,
    "member-ordering": [
      true,
      "variables-before-functions"
    ],
    "new-parens": true,
    "no-angle-bracket-type-assertion": false,
    "no-any": false,
    "no-arg": true,
    "no-bitwise": true,
    "no-boolean-literal-compare": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": [ true, "log", "debug", "info", "warn", "error" ],
    "no-construct": true,
    "no-constructor-vars": false,
    "no-debugger": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": true,
    "no-empty": false,
    "no-eval": true,
    "no-for-in-array": true,
    "no-implicit-dependencies": [ true, "dev" ],
    "no-inferrable-types": false,
    "no-internal-module": false,
    "no-invalid-this": false,
    "no-null-keyword": false,
    "no-parameter-reassignment": false,
    "no-redundant-jsdoc": false,
    "no-require-imports": false,
    "no-return-await": true,
    "no-shadowed-variable": false, // Our interfaces and injected fields are named the same
    "no-string-literal": true,
    "no-trailing-whitespace": true,
    "no-unbound-method": false, // This interferes with our unit tests in particular
    "no-unnecessary-class": false, // app.ts
    "no-unnecessary-qualifier": true,
    "no-unnecessary-type-assertion": true,
    //"no-unsafe-any": true,
    "no-unsafe-finally": true,
    "no-unused-expression": true,
    "no-unused-variable": false, // We allow unused parameters
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "no-var-requires": true,
    "object-literal-sort-keys": false,
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-finally",
      "check-whitespace"
    ],
    //"only-arrow-functions": true,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "radix": true,
    "semicolon": true,
    //"strict-type-predicates": true,
    "trailing-comma": [
      true,
      { "singleline": "never" }
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef": [
      true,
      "parameter",
      "property-declaration",
      "variable-declaration",
      "member-variable-declaration"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "use-isnan": true,
    "variable-name": [
      true,
      "ban-keywords"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-module",
      "check-operator",
      "check-separator",
      "check-type"
    ]
  }
}