{
  "rules": {
    "adjacent-overload-signatures": true,
    "align": [
      true,
      "statements"
    ],
    "arrow-parens": true,
    "ban": false,
    "ban-comma-operator": true,
    "class-name": true,
    "comment-format": [ true, "check-space" ],
    "completed-docs": [ true, "classes", "enums", "functions", "interfaces", "types" ],
    "curly": true,
    "cyclomatic-complexity": [ true, 10 ],
    "deprecation": true,
    "encoding": true,
    "eofline": true,
    "forin": false,
    "indent": [
      true,
      "spaces"
    ],
    "jsdoc-format": [ true, "check-multiline-start" ],
    "label-position": true,
    "linebreak-style": [ true, "LF" ],
    "match-default-export-name": false, // Being true breaks Vue components (default export is 'Vue')
    "max-file-line-count": [ true, 500 ],
    "max-line-length": [
      true,
      120
    ],
    "member-access": false,
    "member-ordering": false, //[ true, { "order": "fields-first" } ], // Requires weird placement of static methods
    "new-parens": true,
    "no-angle-bracket-type-assertion": true,
    "no-any": false,
    "no-arg": true,
    "no-bitwise": true,
    "no-boolean-literal-compare": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,//[ true, 1 ], // This breaks Vue single-file component *.vue files
    //"no-console": [ true, "log", "debug", "info", "warn", "error" ],
    "no-construct": true,
    "no-constructor-vars": false,
    "no-debugger": true,
    "no-duplicate-imports": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-empty-interface": true,
    "no-eval": true,
    "no-for-in-array": true,
    "no-implicit-dependencies": [ true, "dev" ],
    "no-import-side-effect": false,
    "no-inferrable-types": false,
    "no-internal-module": true,
    "no-invalid-template-strings": true,
    "no-invalid-this": false,
    "no-irregular-whitespace": true,
    "no-magic-numbers": true,
    "no-mergeable-namespace": true,
    "no-misused-new": true,
    "no-namespace": true,
    "no-null-keyword": false,
    "no-parameter-reassignment": false,
    "no-redundant-jsdoc": false,
    "no-reference": true,
    "no-require-imports": true,
    "no-return-await": true,
    "no-shadowed-variable": true,
    "no-string-literal": true,
    "no-submodule-imports": false, // Importing submodules of vue for builds
    "no-this-assignment": true,
    "no-trailing-whitespace": true,
    "no-unbound-method": false, // This interferes with our unit tests in particular
    "no-unnecessary-class": false, // app.ts
    "no-unnecessary-qualifier": true,
    "no-unnecessary-type-assertion": true,
    "no-unsafe-any": false,
    "no-unsafe-finally": true,
    "no-unused-expression": true,
    "no-unused-variable": false, // We allow unused parameters
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "no-var-requires": true,
    "object-literal-sort-keys": false,
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-finally",
      "check-whitespace"
    ],
    //"only-arrow-functions": true,
    "prefer-conditional-expression": true,
    "prefer-const": true,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "radix": true,
    "restrict-plus-operands": false, // Allow concatenating strings with numbers
    "semicolon": true,
    "strict-boolean-expressions": false,
    //"strict-type-predicates": true,
    "trailing-comma": [
      true,
      { "singleline": "never" }
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef": [
      true,
      "parameter",
      "property-declaration",
      "variable-declaration",
      "member-variable-declaration"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "unified-signatures": true,
    "use-default-type-parameter": true,
    "use-isnan": true,
    "variable-name": [
      true,
      "check-format",
      "ban-keywords"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-module",
      "check-operator",
      "check-separator",
      "check-type"
    ]
  }
}
